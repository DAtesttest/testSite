var nameArray = [sem1Preview.name, sem2Preview.name, sem3Preview.name, sem4Preview.name, pr1.name,  pr2.name, pr3.name, pr4.name, pr5.name, pr6.name, pr7.name, pr8.name, pr9.name, pr10.name, pr11.name, pr12.name, photoAmsterdam, photoBelgium, photoBerlin, photoBolivia, photoFrance, photoNewYork];
